%div.login
	%h1
		Welcome to Switter
	= form_tag '/login' do

		Username:
		= text_field_tag :username_login
		<br/>
		Password:
		= password_field_tag :password_login
		<br/>
		= submit_tag "Log in"

	= form_for @user do |f|
		- if @user.errors.any?
			#error_explanation
				%h2= "#{pluralize(@user.errors.count, "error")} prohibited this user from being saved:"
				%ul
					- @user.errors.full_messages.each do |msg|
						%li= msg

		.field
			= f.label :username
			= f.text_field :username
		.field
			= f.label :password
			= f.password_field :password
		.field
			= f.label :password_confirmation
			= f.password_field :password_confirmation
		.actions
			= f.submit 'Sign Up'